<layout version="0.1.0">
    <!-- Default -->
    <default>
        <reference name="head">

            <action method="removeItem"><type>js</type><name>lib/jquery/jquery-1.10.2.min.js</name></action>
            <action method="removeItem">
                <rel>link_rel</rel>
                <href>//fonts.googleapis.com/css?family=Raleway:300,400,500,700,600</href>
            </action>
            <action method="addLinkRel"><rel>stylesheet</rel><href>//fonts.googleapis.com/css?family=Fanwood+Text</href></action>
            <action method="addItem"> <type>skin_js</type> <name>js/jquery-1.11.3.min.js</name> </action>
            <action method="addItem"> <type>skin_js</type> <name>js/main_scripts.js</name> </action>
            <action method="addItem"> <type>skin_css</type> <name>css/styles.css</name> </action>
            <action method="addItem"> <type>skin_css</type> <name>css/main_styles.dev.css</name> </action>

        </reference>

        <reference name="header">
            <!--<block type="samnavigation/checkout_links" name="cartlink" template="page/template/cartlink.phtml" />-->

            <!-- Shopping cart popup -->
            <block type="checkout/cart_sidebar" name="cart_sidebar" as="topcart"  template="checkout/cart/sidebar.phtml"/>

        </reference>
        <reference name="top.links">
            <action method="unsetChild">
                <name>checkout_cart_link</name>
            </action>
        </reference>
        <reference name="footer">
            <block type="directory/currency" name="currency_footer" template="directory/currency-footer.phtml"/>
        </reference>
        <!--<remove name="breadcrumbs" />-->
        <remove name="catalog.compare.sidebar"/>
        <remove name="right.poll"/>
        <remove name="wishlist_sidebar"/>
        <remove name="paypal.partner.right.logo"/>
        <remove name="left.permanent.callout"/>
        <remove name="right.permanent.callout"/>
        <remove name="sale.reorder.sidebar"/>
        <!--<remove name="right.reports.product.viewed"/>-->
        <!-- Mage_Newsletter -->
    </default>


    <cms_index_index>
        <reference name="head">
        </reference>
        <reference name="content">
            <block type="core/template" name="home.content" template="page/homepage/index.phtml">
                <block type="catalog/product_list" name="home.catalog.product.list" alias="products_homepage"
                       template="page/homepage/homelist.phtml">
                    <action method="setCategoryId">
                        <category_id>6</category_id>
                    </action>
                    <action method="setData">
                        <key>products_count</key>
                        <value>2</value>
                    </action>
                    <block type="cms/block" name="product.banner1">
                        <action method="setBlockId">
                            <block_id>home-products-banner1</block_id>
                        </action>
                    </block>
                    <block type="cms/block" name="product.banner2">
                        <action method="setBlockId">
                            <block_id>home-products-banner2</block_id>
                        </action>
                    </block>
                    <block type="instagram/latest" name="instagram.lastitem" template="instagram/onelatest.phtml"/>
                </block>

                <block type="instagram/latest" name="home.instagram" template="instagram/home.phtml"/>
            </block>
        </reference>
        <reference name="root">
            <block type="core/template" name="home.popup" template="page/html/popup.phtml"/>
        </reference>
        <reference name="top.links">
            <action method="unsetChild">
                <name>checkout_cart_link</name>
            </action>
        </reference>
    </cms_index_index>
